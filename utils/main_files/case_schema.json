{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Legal Case Schema",
  "description": "Schema for legal case data in the annotation system",
  "type": "object",
  "required": ["id", "title", "content"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the case"
    },
    "source": {
      "type": "string",
      "description": "Source of the case data"
    },
    "title": {
      "type": "string",
      "description": "Title of the case"
    },
    "court": {
      "type": "string",
      "description": "Court that heard the case"
    },
    "judgment_date": {
      "type": "string",
      "description": "Date of the judgment (ISO format preferred)"
    },
    "content": {
      "type": "string",
      "description": "Full text content of the case"
    },
    "entities": {
      "type": "object",
      "description": "Entities extracted from the case",
      "properties": {
        "cases": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of case names cited in the content"
        },
        "statutes": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of statutes referenced in the content"
        },
        "judges": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of judges involved in the case"
        },
        "jurisdictions": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "List of jurisdictions relevant to the case"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata about the case",
      "properties": {
        "judges": {
          "type": "string",
          "description": "Comma-separated list of judges"
        },
        "primary_case_title": {
          "type": "string",
          "description": "Primary title of the case"
        },
        "primary_case_number": {
          "type": "string",
          "description": "Primary case number or identifier"
        },
        "primary_citation": {
          "type": "string",
          "description": "Primary citation for the case"
        }
      }
    },
    "cited_cases": {
      "type": "array",
      "description": "Detailed information about cases cited in this case",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Title of the cited case"
          },
          "citation": {
            "type": "string",
            "description": "Citation of the cited case"
          },
          "relevance": {
            "type": "string",
            "enum": ["High", "Medium", "Low"],
            "description": "Relevance of the cited case to the current case"
          }
        },
        "required": ["title"]
      }
    },
    "final_decision": {
      "type": "string",
      "description": "Summary of the final decision or ruling in the case"
    },
    "case_type": {
      "type": "string",
      "description": "Type or category of the case (e.g., Civil Appeal, Criminal, Constitutional)"
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the case record was created"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the case record was last updated"
    }
  }
} 